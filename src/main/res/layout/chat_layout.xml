<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/darkgrey"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/msg_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/grey"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/msg_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_small"
        android:textColor="@color/yellow"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/text_small"
        android:inputType="textPersonName"
        android:hint="Type Your Message here" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_small"
        android:background="@color/black"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:layout_marginLeft="@dimen/size_small"
            android:layout_alignParentEnd="true"
            android:text="cancel" />

        <Button
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:text="clear" />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:layout_marginRight="@dimen/size_small"
            android:text="Send" />

    </LinearLayout>




</LinearLayout>
